{
  "builders": [
    {
      "type": "qemu",
      "name": "fedora-30",
      "vm_name": "fedora-30",
      "accelerator": "kvm",
      "disk_size": 4096,
      "format": "raw",
      "headless": true,
      "http_directory": "http",
      "iso_url": "http://mirror.aarnet.edu.au/pub/fedora/linux/releases/30/Server/x86_64/iso/Fedora-Server-netinst-x86_64-30-1.2.iso",
      "iso_checksum": "5e4eac4566d8c572bfb3bcf54b7d6c82006ec3c6c882a2c9235c6d3494d7b100",
      "iso_checksum_type": "sha256",
      "ssh_password": "not_a_real_password",
      "ssh_port": 22,
      "ssh_username": "root",
      "ssh_wait_timeout": "10000s",
      "vnc_bind_address": "0.0.0.0",
      "qemuargs": [
        [ "-m", "2048M" ],
        [ "-cpu", "host" ],
        [ "-smp", "2" ]
      ],
      "boot_wait": "5s",
      "boot_command": [
        "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/fedora-30-kickstart.cfg<enter><wait>"
      ]
    }
  ],
  "provisioners": [
    {
      "type": "ansible",
      "ansible_env_vars": [
        "ANSIBLE_CONFIG=ansible/ansible.cfg"
      ],
      "extra_arguments": [
        "--ssh-extra-args",
        "-o IdentitiesOnly=yes",
        "--extra-vars",
        "ansible_python_interpreter=/usr/bin/python3 image_build_dir='{{pwd}}/output-{{build_name}}'"
      ],
      "playbook_file": "ansible/playbook.yml"
    },
    {
      "type": "shell",
      "script": "scripts/cleanup.sh"
    }
  ]
}
