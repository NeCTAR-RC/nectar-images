{
  "builders": [
    {
      "type": "qemu",
      "name": "centos-7",
      "vm_name": "centos-7",
      "accelerator": "kvm",
      "disk_size": "4096",
      "format": "raw",
      "headless": true,
      "http_directory": "http",
      "iso_url": "http://mirror.aarnet.edu.au/pub/centos/7.8.2003/isos/x86_64/CentOS-7-x86_64-NetInstall-2003.iso",
      "iso_checksum": "sha256:101bc813d2af9ccf534d112cbe8670e6d900425b297d1a4d2529c5ad5f226372",
      "ssh_password": "not_a_real_password",
      "ssh_port": 22,
      "ssh_username": "root",
      "ssh_timeout": "30m",
      "vnc_bind_address": "0.0.0.0",
      "qemuargs": [
        [ "-m", "2048M" ],
        [ "-cpu", "host" ],
        [ "-smp", "2" ]
      ],
      "boot_wait": "5s",
      "boot_command": [
        "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/centos-7-kickstart.cfg<enter><wait>"
      ]
    }
  ],
  "provisioners": [
    {
      "type": "ansible",
      "ansible_env_vars": [
        "ANSIBLE_CONFIG=ansible/ansible.cfg"
      ],
      "extra_arguments": [
        "--ssh-extra-args",
        "-o IdentitiesOnly=yes",
        "--extra-vars",
        "image_build_dir='{{pwd}}/output-{{build_name}}'"
      ],
      "playbook_file": "ansible/playbook.yml"
    },
    {
      "type": "shell",
      "script": "scripts/cleanup.sh"
    }
  ]
}
