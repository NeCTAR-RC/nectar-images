{
  "builders": [
    {
      "type": "qemu",
      "name": "debian-7-x86_64",
      "vm_name": "debian-7-x86_64",
      "accelerator": "kvm",
      "disk_size": 2048,
      "format": "qcow2",
      "headless": true,
      "http_directory": "http",
      "iso_url": "{{user `debian-7_iso_url`}}",
      "iso_checksum": "{{user `debian-7_iso_checksum`}}",
      "iso_checksum_type": "{{user `debian-7_iso_checksum_type`}}",
      "ssh_password": "b4dP4ssw0Rd",
      "ssh_port": 22,
      "ssh_username": "root",
      "ssh_wait_timeout": "10000s",
      "qemuargs": [
        [ "-m", "4096M" ],
        [ "-cpu", "host" ],
        [ "-smp", "1" ]
      ],
      "boot_wait": "1s",
      "boot_command": [
        "<esc><wait> auto url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/debian-7-x86_64-preseed.cfg keymap=us debian-installer/keymap=us<enter><wait>"
      ]
    }
  ],
  "provisioners": [
    {
      "type": "file",
      "source": "files/debian/cloud.cfg",
      "destination": "/tmp/cloud.cfg"
    },
    {
      "type": "shell",
      "inline": "/bin/mkdir -p /var/lib/packer/build"
    },
    {
      "type": "file",
      "source": "files/testing",
      "destination": "/var/lib/packer/build"
    },
    {
      "type": "shell",
      "scripts": [
        "scripts/banner.sh",
        "scripts/security.sh",
        "scripts/openstack-debian.sh",
        "scripts/fail2ban.sh",
        "scripts/cleanup.sh",
        "scripts/zerodisk.sh"
      ]
    }
  ]
}
