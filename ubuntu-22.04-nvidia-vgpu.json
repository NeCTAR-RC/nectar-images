{
  "builders": [
    {
      "type": "qemu",
      "name": "ubuntu-22.04-nvidia-vgpu",
      "vm_name": "ubuntu-22.04-nvidia-vgpu",
      "accelerator": "kvm",
      "disk_size": "30720",
      "format": "raw",
      "headless": true,
      "http_directory": "http/ubuntu-22.04",
      "iso_url": "http://mirrors.rc.nectar.org.au/packer-iso/ubuntu-22.04-live-server-amd64.iso",
      "iso_checksum": "sha256:84aeaf7823c8c61baa0ae862d0a06b03409394800000b3235854a6b38eb4856f",
      "ssh_username": "root",
      "ssh_private_key_file": "packer-ssh-key",
      "ssh_timeout": "30m",
      "vnc_bind_address": "0.0.0.0",
      "memory": 8192,
      "cpus": 4,
      "boot_wait": "5s",
      "boot_command": [
        "c",
        "<wait>",
        "set gfxpayload=keep",
        "<enter><wait>",
        "linux /casper/vmlinuz quiet net.ifnames=0 biosdevname=0 autoinstall ds=nocloud-net\\;s=http://{{.HTTPIP}}:{{.HTTPPort}}/ ---",
        "<enter><wait5>",
        "initrd /casper/initrd",
        "<enter><wait10>",
        "boot",
        "<enter>"
      ]
    }
  ],
  "provisioners": [
    {
      "type": "ansible",
      "use_proxy": "false",
      "ansible_env_vars": [
        "ANSIBLE_CONFIG=ansible/ansible.cfg"
      ],
      "extra_arguments": [
        "--ssh-extra-args", "-o IdentitiesOnly=yes",
        "--extra-vars", "ansible_python_interpreter=/usr/bin/python3 nectar_image_name='Ubuntu 22.04 LTS (Jammy) amd64 (NVIDIA vGPU)' image_build_dir='{{pwd}}/output-{{build_name}}'"
      ],
      "playbook_file": "ansible/playbook-nvidia-vgpu.yml"
    },
    {
      "type": "shell",
      "script": "scripts/cleanup.sh"
    }
  ]
}
