start on runlevel [2345]
stop on runlevel [016]

respawn
# the default post-start of 1 second sleep delays respawning enough to
# not hit the default of 10 times in 5 seconds. Make it 2 times in 5s.
respawn limit 2 5

# We're logging to syslog
console none

exec start-stop-daemon --start -c root --exec {{ murano_agent_bin }} -- --config-dir /etc/murano --log-file /var/log/murano-agent.log

post-start exec sleep 1
