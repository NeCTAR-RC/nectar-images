[Unit]
Description=JupyterHub

[Service]
Environment=PATH={{ anaconda_link_dir }}/bin:/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin
ExecStart={{ anaconda_link_dir }}/bin/jupyterhub --no-ssl --config /etc/jupyterhub/jupyterhub_config.py
ReadOnlyDirectories=/
ReadWriteDirectories=/var/lib/jupyterhub /var/log/ /proc/self/ /run/
WorkingDirectory=/var/lib/jupyterhub
CapabilityBoundingSet=CAP_NET_BIND_SERVICE CAP_AUDIT_WRITE CAP_SETGID CAP_SETUID
PrivateDevices=yes
PrivateTmp=yes

[Install]
WantedBy=default.target
