{
  "builders": [
    {
      "type": "openstack",
      "flavor": "m2.xsmall",
      "image_name": "centos-7-x86_64_build",
      "source_image": "7c7d09c6-dd4b-404a-8c39-30d34ca87776",
      "ssh_pty": true,
      "ssh_username": "centos"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "sudo yum -q -y install python libselinux-python"
      ]
    },
    {
      "type": "ansible",
      "playbook_file": "ansible/playbook.yml"
    },
    {
      "type": "shell",
      "execute_command": "{{.Vars}} sudo -S -E bash '{{.Path}}'",
      "script": "scripts/cleanup.sh"
    }
  ]
}
