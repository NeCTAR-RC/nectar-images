{
  "variables": {
    "fedora-25_image_id": "",
    "fedora-25_flavor_name": "",
    "ORGANISATION": "{{env `ORGANISATION`}}",
    "OS_AUTH_URL": "{{env `OS_AUTH_URL`}}",
    "IMAGE_SUPPORT_URL": "{{env `IMAGE_SUPPORT_URL`}}"
  },
  "builders": [
    {
      "type": "openstack",
      "flavor": "{{user `fedora-25_flavor_name`}}",
      "identity_endpoint": "{{user `OS_AUTH_URL`}}",
      "image_name": "fedora-25-x86_64",
      "source_image": "{{user `fedora-25_image_id`}}",
      "ssh_port": 22,
      "ssh_username": "fedora"
    }
  ],
  "provisioners": [
    {
      "type": "file",
      "source": "files/fedora/cloud.cfg",
      "destination": "/tmp/cloud.cfg"
    },
    {
      "type": "file",
      "source": "files/testing",
      "destination": "/tmp/nectar"
    },
    {
      "type": "shell",
      "environment_vars": [
        "ORGANISATION={{user `ORGANISATION`}}",
        "IMAGE_SUPPORT_URL={{user `IMAGE_SUPPORT_URL`}}"
      ],
      "execute_command": "sudo -E /bin/bash '{{.Path}}'",
      "scripts": [
        "scripts/banner.sh",
        "scripts/security.sh",
        "scripts/openstack-redhat.sh",
        "scripts/fail2ban.sh",
        "scripts/cleanup.sh",
        "scripts/zerodisk.sh"
      ]
    }
  ]
}
