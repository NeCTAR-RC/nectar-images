{
  "variables": {
    "ORGANISATION": "{{env `ORGANISATION`}}",
    "IMAGE_SUPPORT_URL": "{{env `IMAGE_SUPPORT_URL`}}"
  },
  "builders": [
    {
      "type": "qemu",
      "name": "ubuntu-16.04-x86_64-murano-agent",
      "vm_name": "ubuntu-16.04-x86_64-murano-agent",
      "accelerator": "kvm",
      "disk_size": 2048,
      "format": "qcow2",
      "headless": true,
      "http_directory": "http",
      "iso_url": "{{user `ubuntu-16.04_iso_url`}}",
      "iso_checksum": "{{user `ubuntu-16.04_iso_checksum`}}",
      "iso_checksum_type": "{{user `ubuntu-16.04_iso_checksum_type`}}",
      "ssh_password": "b4dP4ssw0Rd",
      "ssh_port": 22,
      "ssh_username": "root",
      "ssh_wait_timeout": "10000s",
      "qemuargs": [
        [ "-m", "4096M" ],
        [ "-cpu", "host" ],
        [ "-smp", "1" ]
      ],
      "boot_wait": "10s",
      "boot_command": [
        "<tab><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "fb=false hostname=ubuntu locale=en_AU ",
        "console-keymaps-at/keymap=us console-setup/ask_detect=false ",
        "console-setup/layoutcode=us keyboard-configuration/layout=USA keyboard-configuration/variant=USA ",
        "preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ubuntu-16.04-x86_64-preseed.cfg <enter><wait>"
      ]
    }
  ],
  "provisioners": [
    {
      "type": "file",
      "source": "files/ubuntu/cloud.cfg",
      "destination": "/tmp/cloud.cfg"
    },
    {
      "type": "shell",
      "inline": "/bin/mkdir -p /var/lib/packer/build"
    },
    {
      "type": "file",
      "source": "files/testing",
      "destination": "/var/lib/packer/build"
    },
    {
      "type": "shell",
      "environment_vars": [
        "ORGANISATION={{user `ORGANISATION`}}",
        "IMAGE_SUPPORT_URL={{user `IMAGE_SUPPORT_URL`}}"
      ],
      "scripts": [
        "scripts/banner.sh",
        "scripts/security.sh",
        "scripts/openstack-debian.sh",
        "scripts/murano-agent.sh",
        "scripts/fail2ban.sh",
        "scripts/nectar.sh",
        "scripts/ubuntu.sh",
        "scripts/cleanup.sh",
        "scripts/zerodisk.sh"
      ]
    }
  ]
}
