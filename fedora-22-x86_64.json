{
  "variables": {
    "ORGANISATION": "{{env `ORGANISATION`}}",
    "IMAGE_SUPPORT_URL": "{{env `IMAGE_SUPPORT_URL`}}"
  },
  "builders": [
    {
      "type": "qemu",
      "name": "fedora-22-x86_64",
      "vm_name": "fedora-22-x86_64",
      "accelerator": "kvm",
      "disk_size": 4096,
      "format": "qcow2",
      "headless": true,
      "http_directory": "http",
      "iso_url": "{{user `fedora-22_iso_url`}}",
      "iso_checksum": "{{user `fedora-22_iso_checksum`}}",
      "iso_checksum_type": "{{user `fedora-22_iso_checksum_type`}}",
      "ssh_password": "b4dP4ssw0Rd",
      "ssh_port": 22,
      "ssh_username": "root",
      "ssh_wait_timeout": "10000s",
      "qemuargs": [
        [ "-m", "4096M" ],
        [ "-cpu", "host" ],
        [ "-smp", "1" ]
      ],
      "boot_wait": "1s",
      "boot_command": [
        "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/fedora-22-x86_64-kickstart.cfg<enter><wait>"
      ]
    }
  ],
  "provisioners": [
    {
      "type": "file",
      "source": "files/fedora/cloud.cfg",
      "destination": "/tmp/cloud.cfg"
    },
    {
      "type": "file",
      "source": "files/testing",
      "destination": "/usr/nectar"
    },
    {
      "type": "shell",
      "environment_vars": [
        "ORGANISATION={{user `ORGANISATION`}}",
        "IMAGE_SUPPORT_URL={{user `IMAGE_SUPPORT_URL`}}"
      ],
      "scripts": [
        "scripts/banner.sh",
        "scripts/security.sh",
        "scripts/openstack-redhat.sh",
        "scripts/fail2ban.sh",
        "scripts/cleanup.sh",
        "scripts/zerodisk.sh"
      ]
    }
  ]
}
