{
  "builders": [
    {
      "type": "openstack",
      "flavor": "m2.xsmall",
      "image_name": "ubuntu-14.04-x86_64-murano-agent_build",
      "source_image": "26070d12-2edc-4a6d-93c9-3be7f860927e",
      "ssh_username": "ubuntu"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "execute_command": "{{.Vars}} sudo -S -E bash '{{.Path}}'",
      "script": "scripts/setup.sh"
    },
    { 
      "type": "ansible",
      "playbook_file": "ansible/playbook-murano.yml"
    },
    { 
      "type": "shell",
      "execute_command": "{{.Vars}} sudo -S -E bash '{{.Path}}'",
      "script": "scripts/cleanup.sh"
    }
  ]
}
