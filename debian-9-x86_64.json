{
  "builders": [
    {
      "type": "qemu",
      "name": "debian-9-x86_64",
      "vm_name": "debian-9-x86_64",
      "accelerator": "kvm",
      "disk_size": 2048,
      "format": "raw",
      "headless": true,
      "http_directory": "http",
      "iso_url": "https://cdimage.debian.org/mirror/cdimage/archive/9.12.0/amd64/iso-cd/debian-9.12.0-amd64-netinst.iso",
      "iso_checksum": "3c47f64693435b0b42b6ef59624edbffa7c4004317d9f9a3f04ecb6a4e30f191",
      "iso_checksum_type": "sha256",
      "ssh_password": "not_a_real_password",
      "ssh_port": 22,
      "ssh_username": "root",
      "ssh_wait_timeout": "10000s",
      "vnc_bind_address": "0.0.0.0",
      "qemuargs": [
        [ "-m", "2048M" ],
        [ "-cpu", "host" ],
        [ "-smp", "2" ]
      ],
      "boot_wait": "5s",
      "boot_command": [
        "<esc><wait5><tab>",
        "auto url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/debian-9-x86_64-preseed.cfg keymap=us ",
        "debian-installer/keymap=us net.ifnames=0 biosdevname=0<enter><wait>"
      ]
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "apt-get -q -y update",
        "apt-get -q -y install python3 sudo"
      ]
    },
    {
      "type": "ansible",
      "ansible_env_vars": [
        "ANSIBLE_CONFIG=ansible/ansible.cfg"
      ],
      "playbook_file": "ansible/playbook.yml",
      "extra_arguments": [
        "--ssh-extra-args",
        "-o IdentitiesOnly=yes",
        "--extra-vars",
        "ansible_python_interpreter=/usr/bin/python3 image_build_dir='{{pwd}}/output-{{build_name}}'"
      ]
    },
    {
      "type": "shell",
      "script": "scripts/cleanup.sh"
    }
  ]
}
