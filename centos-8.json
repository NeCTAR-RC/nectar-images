{
  "builders": [
    {
      "type": "qemu",
      "name": "centos-8",
      "vm_name": "centos-8",
      "accelerator": "kvm",
      "disk_size": "4096",
      "format": "raw",
      "headless": true,
      "http_directory": "http",
      "iso_url": "http://mirror.aarnet.edu.au/pub/centos/8.2.2004/isos/x86_64/CentOS-8.2.2004-x86_64-minimal.iso",
      "iso_checksum": "sha256:47ab14778c823acae2ee6d365d76a9aed3f95bb8d0add23a06536b58bb5293c0",
      "ssh_password": "not_a_real_password",
      "ssh_port": 22,
      "ssh_username": "root",
      "ssh_timeout": "30m",
      "vnc_bind_address": "0.0.0.0",
      "qemuargs": [
        [ "-m", "2048M" ],
        [ "-cpu", "host" ],
        [ "-smp", "2" ]
      ],
      "boot_wait": "5s",
      "boot_command": [
        "<tab> text net.ifnames=0 biosdevname=0 ",
        "ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/centos-8-kickstart.cfg<enter><wait>"
      ]
    }
  ],
  "provisioners": [
    {
      "type": "ansible",
      "ansible_env_vars": [
        "ANSIBLE_CONFIG=ansible/ansible.cfg"
      ],
      "extra_arguments": [
        "--ssh-extra-args",
        "-o IdentitiesOnly=yes",
        "--extra-vars",
        "image_build_dir='{{pwd}}/output-{{build_name}}'"
      ],
      "playbook_file": "ansible/playbook.yml"
    },
    {
      "type": "shell",
      "script": "scripts/cleanup.sh"
    }
  ]
}
