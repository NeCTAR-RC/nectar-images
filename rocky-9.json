{
  "builders": [
    {
      "type": "qemu",
      "name": "rocky-9",
      "vm_name": "rocky-9",
      "accelerator": "kvm",
      "disk_size": "4096",
      "format": "raw",
      "headless": true,
      "http_directory": "http",
      "iso_url": "http://mirrors.rc.nectar.org.au/packer-iso/Rocky-9.0-x86_64-boot.iso",
      "iso_checksum": "sha256:fc6b306b9fc8d327d7545373ce88c48bd1f7e84d29548814a91e84676b7d26e4",
      "ssh_username": "root",
      "ssh_private_key_file": "packer-ssh-key",
      "ssh_timeout": "30m",
      "vnc_bind_address": "0.0.0.0",
      "qemuargs": [
        [ "-m", "2048M" ],
        [ "-cpu", "host" ],
        [ "-smp", "2" ]
      ],
      "boot_wait": "5s",
      "boot_command": [
        "<tab> text net.ifnames=0 biosdevname=0 ",
        "inst.ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/rocky-9-kickstart.cfg<enter><wait>"
      ]
    }
  ],
  "provisioners": [
    {
      "type": "ansible",
      "use_proxy": "false",
      "ansible_env_vars": [
        "ANSIBLE_CONFIG=ansible/ansible.cfg"
      ],
      "extra_arguments": [
        "--ssh-extra-args",
        "-o IdentitiesOnly=yes",
        "--extra-vars",
        "image_build_dir='{{pwd}}/output-{{build_name}}'"
      ],
      "playbook_file": "ansible/playbook.yml"
    },
    {
      "type": "shell",
      "script": "scripts/cleanup.sh"
    }
  ]
}
