{
  "builders": [
    {
      "type": "qemu",
      "name": "ubuntu-24.04",
      "vm_name": "ubuntu-24.04",
      "accelerator": "kvm",
      "disk_size": "8192",
      "format": "raw",
      "headless": true,
      "http_directory": "http/ubuntu-24.04",
      "iso_url": "http://mirrors.rc.nectar.org.au/packer-iso/ubuntu-24.04-live-server-amd64.iso",
      "iso_checksum": "sha256:8762f7e74e4d64d72fceb5f70682e6b069932deedb4949c6975d0f0fe0a91be3",
      "ssh_username": "root",
      "ssh_private_key_file": "packer-ssh-key",
      "ssh_timeout": "30m",
      "vnc_bind_address": "0.0.0.0",
      "qemuargs": [
        [ "-m", "8192M" ],
        [ "-cpu", "host" ],
        [ "-smp", "4" ]
      ],
      "boot_wait": "5s",
      "boot_command": [
        "<wait3s>c<wait3s>",
        "linux /casper/vmlinuz net.ifnames=0 autoinstall ds=nocloud-net\\;s=http://{{.HTTPIP}}:{{.HTTPPort}}/ ---",
        "<enter><wait>",
        "initrd /casper/initrd",
        "<enter><wait>",
        "boot",
        "<enter>"
      ]
    }
  ],
  "provisioners": [
    {
      "type": "ansible",
      "use_proxy": "false",
      "ansible_env_vars": [
        "ANSIBLE_CONFIG=ansible/ansible.cfg"
      ],
      "extra_arguments": [
        "--ssh-extra-args", "-o IdentitiesOnly=yes",
        "--extra-vars", "image_build_dir='{{pwd}}/output-{{build_name}}'"
      ],
      "playbook_file": "ansible/playbook.yml"
    },
    {
      "type": "shell",
      "execute_command": "{{.Vars}} sudo -S -E bash '{{.Path}}'",
      "script": "scripts/cleanup.sh"
    }
  ]
}
