{
  "variables": {
    "ORGANISATION": "{{env `ORGANISATION`}}",
    "IMAGE_SUPPORT_URL": "{{env `IMAGE_SUPPORT_URL`}}"
  },
  "builders": [
    {
      "type": "qemu",
      "name": "opensuse-leap-42.1-x86_64",
      "vm_name": "opensuse-leap-42.1-x86_64",
      "accelerator": "kvm",
      "disk_size": 2048,
      "format": "qcow2",
      "headless": true,
      "http_directory": "http",
      "iso_url": "{{user `opensuse-leap-42.1_iso_url`}}",
      "iso_checksum": "{{user `opensuse-leap-42.1_iso_checksum`}}",
      "iso_checksum_type": "{{user `opensuse-leap-42.1_iso_checksum_type`}}",
      "ssh_password": "b4dP4ssw0Rd",
      "ssh_port": 22,
      "ssh_username": "root",
      "ssh_wait_timeout": "10000s",
      "qemuargs": [
        [ "-m", "4096M" ],
        [ "-cpu", "host" ],
        [ "-smp", "1" ]
      ],
      "boot_wait": "10s",
      "boot_command": [
        "<esc><enter><wait>linux netdevice=eth0 netsetup=dhcp ",
        "install=http://mirror.aarnet.edu.au/pub/opensuse/opensuse/distribution/leap/42.1/repo/oss/ insecure=1 ",
        "lang=en_AU autoyast=http://{{ .HTTPIP }}:{{ .HTTPPort }}/opensuse-leap-42.1-x86_64-autoyast.xml ",
        "textmode=1<enter><wait>"
      ]
    }
  ],
  "provisioners": [
    {
      "type": "file",
      "source": "files/opensuse/cloud.cfg",
      "destination": "/tmp/cloud.cfg"
    },
    {
      "type": "file",
      "source": "files/testing",
      "destination": "/usr/nectar"
    },
    {
      "type": "shell",
      "environment_vars": [
        "ORGANISATION={{user `ORGANISATION`}}",
        "IMAGE_SUPPORT_URL={{user `IMAGE_SUPPORT_URL`}}"
      ],
      "scripts": [
        "scripts/banner.sh",
        "scripts/security.sh",
        "scripts/openstack-suse.sh",
        "scripts/fail2ban.sh",
        "scripts/cleanup.sh",
        "scripts/zerodisk.sh"
      ]
    }
  ]
}
